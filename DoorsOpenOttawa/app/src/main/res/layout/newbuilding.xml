<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.algonquinlive.lu000094.doorsopenottawa.NewBuildingActivity">

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:id="@+id/txtName"
    android:textAlignment="center"
    android:hint="@string/buildingName"
    android:layout_above="@+id/txtAddress"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="19dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/txtAddress"
        android:textAlignment="center"
        android:layout_marginBottom="17dp"
        android:hint="@string/buildingAddress"
        android:layout_above="@+id/txtDescription"
        android:layout_alignStart="@+id/txtName"
        android:layout_alignEnd="@+id/txtName" />

    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:id="@+id/txtDescription"
    android:textAlignment="center"
    android:layout_marginBottom="25dp"
    android:hint="@string/buldingDescription"
    android:layout_above="@+id/btnAdd"
    android:layout_alignStart="@+id/txtAddress"
    android:layout_alignEnd="@+id/txtAddress" />


    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button android:text="Cancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:id="@+id/btnCancel"
        android:layout_below="@+id/txtDescription"
        android:layout_toStartOf="@+id/progressBar" />

    <Button
    android:text="Add Building"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btnAdd"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/progressBar" />

    <Button
        android:text="Add Building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDelete"
        android:layout_below="@+id/progressBar"
        android:layout_centerHorizontal="true" />
</RelativeLayout>